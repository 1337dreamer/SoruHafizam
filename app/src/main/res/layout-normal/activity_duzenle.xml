<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1"
    tools:context=".Duzenle">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:layout_marginLeft="20dp"
        android:text="Ders:"
        android:textColor="@color/whitee"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView6"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:text="Konu:"
        android:textColor="@color/whitee"
        android:textSize="18sp"/>

    <EditText
        android:id="@+id/txtEditDersDuzenle"
        android:layout_width="206dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dp"
        android:layout_toEndOf="@id/textView6"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/backgroundTint"
        android:hint="Eklemek İstediğiniz Ders"
        android:inputType="textPersonName"
        android:textColor="@color/whitee"
        android:textColorHint="@color/whitee"
        android:textCursorDrawable="@color/backgroundTint"
        android:textSelectHandle="@color/backgroundTint"
        android:textSelectHandleLeft="@color/backgroundTint"
        android:textSelectHandleRight="@color/backgroundTint" />

    <EditText
        android:id="@+id/txtEditKonuDuzenle"
        android:layout_width="206dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_toEndOf="@id/textView6"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="40dp"
        android:layout_below="@id/txtEditDersDuzenle"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/backgroundTint"
        android:hint="Eklemek İstediğiniz Konu"
        android:inputType="textPersonName"
        android:textColor="@color/whitee"
        android:textColorHint="@color/whitee"
        android:textCursorDrawable="@color/backgroundTint"
        android:textSelectHandle="@color/backgroundTint"
        android:textSelectHandleLeft="@color/backgroundTint"
        android:textSelectHandleRight="@color/backgroundTint" />

    <ImageView
        android:id="@+id/cevapUpdateDuzenle"
        android:layout_width="65dp"
        android:layout_below="@id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_height="80dp"
        app:srcCompat="@drawable/upload" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtEditKonuDuzenle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Çözümünü Güncelle!"
        android:textColor="@color/whitee"/>

    <ozaydin.serkan.com.image_zoom_view.ImageViewZoom
        android:id="@+id/imageViewCevapUpDuzenle"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_above="@+id/textView11"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/cevapUpdateDuzenle"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tekrar Sebebiniz:"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_above="@id/btnİptalDuzenle"
        android:layout_marginBottom="40dp"
        android:textColor="@color/whitee"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/txtEditSebepDuzenle"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/textView11"
        android:layout_above="@id/btnİptalDuzenle"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="20dp"
        android:backgroundTint="@color/backgroundTint"
        android:ems="10"
        android:hint="Sebebiniz"
        android:inputType="textPersonName"
        android:textColor="@color/whitee"
        android:textColorHint="@color/whitee"
        android:textCursorDrawable="@color/backgroundTint"
        android:textSelectHandle="@color/backgroundTint"
        android:textSelectHandleLeft="@color/backgroundTint"
        android:textSelectHandleRight="@color/backgroundTint"/>

    <Button
        android:id="@+id/btnDuzenle"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_toEndOf="@id/btnİptalDuzenle"
        android:background="@drawable/degrade_buton1"
        android:text="Güncelle"
        android:layout_marginBottom="20dp"
        android:textColor="@color/black"/>

    <Button
        android:id="@+id/btnİptalDuzenle"
        android:layout_width="120dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="70dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/degrade_buton1"
        android:text="İptal"
        android:textColor="@color/black" />

</RelativeLayout>