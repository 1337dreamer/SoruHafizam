<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1"
    tools:context=".Duzenle">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="100dp"
        android:text="Ders:"
        android:textColor="@color/whitee"
        android:textSize="35sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="78dp"
        android:text="Konu:"
        android:textColor="@color/whitee"
        android:textSize="35sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <EditText
        android:id="@+id/txtEditDersDuzenle"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="190dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="70dp"
        android:backgroundTint="@color/backgroundTint"
        android:hint="Eklemek İstediğiniz Ders"
        android:inputType="textPersonName"
        android:textColor="@color/whitee"
        android:textColorHint="@color/whitee"
        android:textCursorDrawable="@color/backgroundTint"
        android:textSelectHandle="@color/backgroundTint"
        android:textSelectHandleLeft="@color/backgroundTint"
        android:textSelectHandleRight="@color/backgroundTint"
        android:textSize="35sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtEditKonuDuzenle"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="190dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="56dp"
        android:backgroundTint="@color/backgroundTint"
        android:hint="Eklemek İstediğiniz Konu"
        android:inputType="textPersonName"
        android:textColor="@color/whitee"
        android:textColorHint="@color/whitee"
        android:textCursorDrawable="@color/backgroundTint"
        android:textSelectHandle="@color/backgroundTint"
        android:textSelectHandleLeft="@color/backgroundTint"
        android:textSelectHandleRight="@color/backgroundTint"
        android:textSize="35sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/txtEditDersDuzenle" />

    <ImageView
        android:id="@+id/cevapUpdateDuzenle"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="400dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/upload" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="355dp"
        android:text="Çözümünü Güncelle!"
        android:textColor="@color/whitee"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ozaydin.serkan.com.image_zoom_view.ImageViewZoom
        android:id="@+id/imageViewCevapUpDuzenle"
        android:layout_width="320dp"
        android:layout_height="400dp"
        android:layout_marginTop="110dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="110dp"
        android:text="Tekrar Sebebiniz:"
        android:textColor="@color/whitee"
        android:textSize="35sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewCevapUpDuzenle" />

    <EditText
        android:id="@+id/txtEditSebepDuzenle"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="200dp"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="70dp"
        android:backgroundTint="@color/backgroundTint"
        android:ems="10"
        android:hint="Sebebiniz"
        android:inputType="textPersonName"
        android:textColor="@color/whitee"
        android:textColorHint="@color/whitee"
        android:textCursorDrawable="@color/backgroundTint"
        android:textSelectHandle="@color/backgroundTint"
        android:textSelectHandleLeft="@color/backgroundTint"
        android:textSelectHandleRight="@color/backgroundTint"
        android:textSize="35sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintStart_toEndOf="@+id/textView11"
        app:layout_constraintTop_toBottomOf="@+id/imageViewCevapUpDuzenle" />

    <Button
        android:id="@+id/btnDuzenle"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/degrade_buton1"
        android:text="Güncelle"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnİptalDuzenle" />

    <Button
        android:id="@+id/btnİptalDuzenle"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/degrade_buton1"
        android:text="İptal"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnDuzenle"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>